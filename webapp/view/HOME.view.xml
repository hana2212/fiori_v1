<mvc:View
    controllerName="fiori2.controller.HOME"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
    xmlns="sap.m"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
        <content>

    <smartFilterBar:SmartFilterBar id="smartFilterBar" entitySet="EmployeeSet" persistencyKey="SmartFilter_Explored">
        <smartFilterBar:controlConfiguration>
            <smartFilterBar:ControlConfiguration key="ID" visibleInAdvancedArea="true" id="IDquery" groupId="_BASIC" >
                <smartFilterBar:defaultFilterValues>
                    <smartFilterBar:SelectOption low="1" high="10"> </smartFilterBar:SelectOption>
                </smartFilterBar:defaultFilterValues>
            </smartFilterBar:ControlConfiguration>

			 <smartFilterBar:ControlConfiguration key="NAME" visibleInAdvancedArea="true" id="NAMEquery"  >
                <smartFilterBar:defaultFilterValues>
                    <smartFilterBar:SelectOption low="NGUYEN" > </smartFilterBar:SelectOption>
                </smartFilterBar:defaultFilterValues>
            </smartFilterBar:ControlConfiguration>
            
			<smartFilterBar:ControlConfiguration key="DEPART" visibleInAdvancedArea="true" id="DEPARTquery">
                <smartFilterBar:defaultFilterValues>
                    <smartFilterBar:SelectOption  > </smartFilterBar:SelectOption>
                </smartFilterBar:defaultFilterValues>
            </smartFilterBar:ControlConfiguration>
			
        </smartFilterBar:controlConfiguration>
    </smartFilterBar:SmartFilterBar>

    <smartTable:SmartTable id="SmartTable" initiallyVisibleFields="ID,NAME,DEPART" 
        entitySet="EmployeeSet"
        tableType="ResponsiveTable" enableExport="true" useVariantManagement="true" useTablePersonalisation="true" header="Employee List"
        showRowCount="true" persistencyKey="SmartTable_Explored" enableAutoBinding="true" enableAutoColumnWidth="false" class="sapUiResponsiveContentPadding">
<!--		<Table id="idTable" mode="MultiSelect">
			<headerToolbar>
				<OverflowToolbar> 
				<ToolbarSpacer ></ToolbarSpacer>
				<Button class="sapUiSmallMarrginBeginEnd" type="Reject" icon="sap-icon://delete" text="Delete" press="onDelete" />
				</OverflowToolbar>
			</headerToolbar>
	   </Table>-->
    </smartTable:SmartTable>		
        </content>
    </Page>
</mvc:View>
